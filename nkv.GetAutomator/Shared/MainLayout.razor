@inherits LayoutComponentBase
<MudThemeProvider Theme="GetAutomatorTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <AppBarLandingPage></AppBarLandingPage>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-2 pt-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    MudTheme GetAutomatorTheme = new MudTheme()
        { 
            Palette = new Palette()
            {
                Primary = Colors.DeepPurple.Darken1,
                Dark = Colors.DeepPurple.Darken4,
                Secondary = Colors.DeepPurple.Lighten1,
                AppbarBackground = Colors.DeepPurple.Darken2,
            },
            PaletteDark = new Palette()
            {
                Primary = Colors.DeepPurple.Darken4
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Dosis", "Roboto", "Helvetica", "Arial", "sans-serif", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji" }
                }
            }
        };
}
